<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemDishList"
    android:layout_width="fill_parent"
    android:layout_height="128dp"
    android:minHeight="128dp" >

    <ImageView
        android:id="@+id/imgDishAvatar"
        android:layout_width="128dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dish_sample" />

    <TextView
        android:id="@+id/textDishName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgDishAvatar"
        android:ellipsize="marquee"
        android:gravity="top|left"
        android:maxLines="1"
        android:text="Tôm nướng"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Space
        android:id="@+id/Space1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <Space
        android:id="@+id/Space2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/Space1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Space1" />

    <Space
        android:id="@+id/Space3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/Space1"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textDishDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textDishName"
        android:layout_toRightOf="@+id/imgDishAvatar"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLength="100"
        android:maxLines="3"
        android:text="" />

    <Spinner
        android:id="@+id/spinDishPrices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textDishDescription"
        android:layout_alignParentBottom="true" />

    <RatingBar
        android:id="@+id/rateDish"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:isIndicator="true"
        android:numStars="5" />

</RelativeLayout>