<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center_vertical"
    android:padding="5dp" android:weightSum="5">

    <TextView
        android:id="@+id/textDishName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Tôm nướng"
        android:textAppearance="?android:attr/textAppearanceLarge" android:layout_weight="5" android:lines="1"/>

    <RatingBar
        android:id="@+id/rateDish"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="false" />

    <include
        android:id="@+id/include1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        layout="@layout/item_dish_units" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/letter_x" />

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="5dp"
        android:text="TextView"
        android:textStyle="bold" android:lines="1"/>

    <TextView
        android:id="@+id/textItemTotal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:lines="1"
        android:text="TextView" />

</LinearLayout>