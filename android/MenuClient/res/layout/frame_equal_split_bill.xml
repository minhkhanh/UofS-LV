<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeEqualSplit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:padding="5dp">

    <Button
        android:id="@+id/btnPlus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/sign_plus" />

    <TextView
        android:id="@+id/textCustomerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPlus"
        android:layout_alignBottom="@+id/btnPlus"
        android:layout_toLeftOf="@+id/btnPlus"
        android:ems="2"
        android:lines="1"
        android:text="1" android:inputType="number" android:gravity="center"/>

    <Button
        android:id="@+id/btnMinus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textCustomerNumber"
        android:text="@string/sign_minus" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMinus"
        android:layout_alignBottom="@+id/btnMinus"
        android:layout_toLeftOf="@+id/btnMinus"
        android:text="@string/text_number_of_customer" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/btnMinus"
        android:layout_marginTop="22dp"
        android:text="@string/text_each_pays" />

    <TextView
        android:id="@+id/textEachPay"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/btnMinus"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="TextView" />

</RelativeLayout>