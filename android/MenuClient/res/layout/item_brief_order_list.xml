<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="center" android:focusable="false">

    <client.menu.ui.view.CheckMarkView
        android:id="@+id/cmarkOrderSelection"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="39dp"
        android:src="@drawable/selected_selector" android:focusable="false"/>

    <TextView
        android:id="@+id/textOrderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" android:focusable="false"/>

    <LinearLayout
        android:id="@+id/paneButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical" android:focusable="false" android:visibility="invisible">

        <ImageButton
            android:id="@+id/ibtnSplitOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_transparent_background"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/content_cut" />

        <ImageButton
            android:id="@+id/ibtnMoveOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/social_send_now" android:background="@drawable/btn_transparent_background"/>

        <ImageButton
            android:id="@+id/ibtnPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_transparent_background"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/content_paste" />

        <ImageButton
            android:id="@+id/ibtnRemoveOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_transparent_background"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/content_remove" />

    </LinearLayout>

</LinearLayout>