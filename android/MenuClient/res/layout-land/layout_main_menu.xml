<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="0.4"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/LeftPaneHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <emenu.client.menu.view.LanguageSpinner
                android:id="@+id/languageSpinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/RightPaneHolder"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6" >
    </FrameLayout>

</LinearLayout>